{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "mocha", "prettier", "react"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-alert": "error",
        "no-caller": "error",
        "no-console": "warn",
        "no-shadow": "error",
        "no-labels": "error",
        "no-eval": "error",
        "no-extend-native": "error",
        "no-extra-bind": "error",
        "no-implied-eval": "error",
        "no-iterator": "error",
        "no-lone-blocks": "error",
        "no-loop-func": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-global-assign": "error",
        "no-new": "error",
        "no-new-func": "error",
        "no-new-object": "error",
        "no-new-wrappers": "error",
        "no-octal-escape": "error",
        "no-process-exit": "error",
        "no-proto": "error",
        "no-prototype-builtins": "error",
        "no-return-assign": "error",
        "no-script-url": "error",
        "no-sequences": "error",
        "func-call-spacing": ["error", "never"],
        "no-trailing-spaces": "error",
        "no-undef-init": "error",
        "no-unused-expressions": "error",
        "comma-spacing": "error",
        "consistent-return": "error",
        "curly": ["error", "all"],
        "dot-notation": [
            "error",
            {
                "allowKeywords": true
            }
        ],
        "no-extra-parens": ["error", "functions"],
        "eqeqeq": "error",
        "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
        "keyword-spacing": "error",
        "new-cap": "off",
        "new-parens": "error",
        "semi": "error",
        "semi-spacing": ["error", { "before": false, "after": true }],
        "space-infix-ops": "error",
        "space-unary-ops": ["error", { "words": true, "nonwords": false }],
        "strict": ["error", "function"],
        "yoda": "error",
        "no-unmodified-loop-condition": "error",
        "prefer-arrow-callback": ["warn", { "allowNamedFunctions": true }],

        "no-restricted-imports": [
            "error",
            {
                "patterns": ["@material-ui/*/*/*", "!@material-ui/core/test-utils/*"]
            }
        ],

        // react plugin rules
        "react/prop-types": "off",
        "react/no-children-prop": "off",
        "react/no-find-dom-node": "off"
    },
    "overrides": [
        {
            "files": ["**/*.{ts,tsx}"], // Typescript files overrides
            "extends": [
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "rules": {
                "semi": "off",
                "@typescript-eslint/semi": "error",
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/ban-ts-ignore": "off",
                "@typescript-eslint/no-empty-function": "warn",
                "@typescript-eslint/camelcase": "off",
                "@typescript-eslint/no-unused-vars": "warn",
                "@typescript-eslint/no-use-before-define": ["error", { "functions": false }],
                "@typescript-eslint/no-this-alias": "off",
                "@typescript-eslint/default-param-last": "error",
                "@typescript-eslint/interface-name-prefix": [
                    "error",
                    { "prefixWithI": "always", "allowUnderscorePrefix": true }
                ]
            }
        },
        {
            "files": ["**/_*.js"], // Javascript Test files overrides
            "env": {
                "mocha": true,
                "jest":true // To remove after adding chai imports
            },
            "rules": {
                "no-unused-expressions": "off",
                "mocha/no-exclusive-tests": "error"
            }
        }
    ]
}
